{
    "lint": {
        "files": {
            "include": ["./"],
            "exclude": ["./example", "./tests"]
        }
    },
    "fmt": {
        "files": {
            "include": ["./"],
            "exclude": ["./example", "./tests"]
        },
        "options": {
            "indentWidth": 4,
            "lineWidth": 120,
            "singleQuote": true
        }
    },
    "tasks": {
        "autoFixer": "export COMPILE='deno compile --allow-read=. --allow-write=.' NAME='BSAutoFixer' SOURCE='./example/autoFixer.ts' && deno task compileScript",
        "convertToV3": "export COMPILE='deno compile --allow-read=. --allow-write=.' NAME='ConvertToV3' SOURCE='./example/convertToV3.ts' && deno task compileScript",
        "compileScript": "$COMPILE --target=x86_64-pc-windows-msvc --output='./dist/'$NAME'_win64' $SOURCE && $COMPILE --target=x86_64-unknown-linux-gnu --output='./dist/'$NAME'_linux64' $SOURCE && $COMPILE --target=x86_64-apple-darwin --output='./dist/'$NAME'_mac64' $SOURCE && $COMPILE --target=aarch64-apple-darwin --output='./dist/'$NAME'_aarchmac64' $SOURCE"
    }
}
